<div class = "container">

    <p>
      <strong>Name:</strong>
      <%= @course.name %>
    </p>

    <p>
      <strong>Instructor:</strong>
      <%= link_to @course.instructor.name, instructor_path(@course.instructor.id)%>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @course.description %>
    </p>
    <p>

    <% if user_signed_in? %>
       <h2>Student enrolled</h2>
      <% if @course.students.empty? %>
      	<p> No course enrolled </p> 
      <% else %>
      	<ul>
      		<% @course.students.each do |student| %>
      			<li><%= link_to student.name, student_path(student.id)%></li>
      		<% end %>
      	</ul>
      <% end %>
    <% end %>
    </p>
   
</div>