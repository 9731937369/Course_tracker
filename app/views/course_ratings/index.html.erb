<div class = "container">
    <div class = "col-md-6">
        <h3><i class = "glyphicon glyphicon-th-list"></i>Listing Course Ratings</h3>

        <table class = "table table-stripped">
          <thead>
            <tr>
              <th>Student</th>
              <th>Course</th>
              <th>Rating</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @course_ratings.each do |course_rating| %>
              <tr>
                <td><%= link_to course_rating.student.name, course_rating %></td>
                <td><%= link_to course_rating.course.name,course_rating.course %></td>
                <td><%= course_rating.rating %></td>
                <td><%= link_to edit_course_rating_path(course_rating) do %>
                  <i class = "glyphicon glyphicon-pencil"></i>
                  <% end %>
                </td>
                <td><%= link_to course_rating, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="glyphicon glyphicon-trash"></i>
                  <%end%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Course rating', new_course_rating_path %>
    </div>
</div>